<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@drawable/appbg">
	<TextView android:layout_width="fill_parent"
		android:layout_height="40dp" android:drawablePadding="20dp"
		android:text="Welcome to the Zombie Outbreak" android:id="@+id/title"
		style="@style/zombiestyle" />
	<ImageView android:src="@drawable/shadow"
		android:layout_width="fill_parent" android:layout_height="5dp"
		android:id="@+id/titleshadow" android:layout_below="@+id/title"
		android:layout_alignLeft="@+id/title" android:layout_alignRight="@+id/title"></ImageView>
	<TextView android:layout_below="@+id/titleshadow"
		android:layout_width="wrap_content" android:id="@+id/signintext"
		android:layout_height="wrap_content"
		android:text="Sign in to the zombie apocalipse.\nDon't have an account? Just put in your email and a password and your in!"
		style="@style/Textstyle" android:layout_alignLeft="@+id/titleshadow"
		android:layout_alignRight="@+id/titleshadow"></TextView>
	<TextView android:layout_below="@+id/signintext"
		android:layout_width="wrap_content" android:id="@+id/textView1"
		android:layout_height="wrap_content" android:text="Email:"
		android:layout_alignLeft="@+id/signintext" android:layout_alignRight="@+id/signintext"></TextView>
	<EditText android:layout_below="@+id/textView1" android:singleLine="true"
		android:layout_width="wrap_content" android:id="@+id/email"
		android:layout_height="wrap_content" android:layout_alignLeft="@+id/textView1"
		android:layout_alignRight="@+id/textView1" android:maxLines="1"></EditText>
	<TextView android:layout_below="@+id/email"
		android:layout_width="wrap_content" android:id="@+id/textView2"
		android:layout_height="wrap_content" android:text="Password:"
		android:layout_alignLeft="@+id/email" android:layout_alignRight="@+id/email"></TextView>
	<EditText android:layout_below="@+id/textView2" android:singleLine="true" android:password="true"
		android:layout_width="wrap_content" android:id="@+id/password"
		android:layout_height="wrap_content" android:maxLines="1"
		android:layout_alignLeft="@+id/textView2" android:layout_alignRight="@+id/textView2"></EditText>
	<Button android:id="@+id/signin" android:layout_height="wrap_content"
		android:text="I'm Ready!" android:layout_width="wrap_content"
		android:layout_below="@+id/password" android:layout_alignLeft="@+id/password"
		android:layout_alignRight="@+id/password"></Button>



</RelativeLayout>
